<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mul.cam.e.dao.BoardDao">
    <select id="all" resultType="mul.cam.e.dto.BoardDto">
        select *
        from bbs
    </select>

    <select id="one"
            parameterType="int"
            resultType="mul.cam.e.dto.BoardDto">
        select * from bbs
        where seq = #{seq}
    </select>

    <insert id="insert"
            parameterType="mul.cam.e.dto.BoardDto">
        insert into bbs (title, content, wdate, readcount)
        values (#{title}, #{content}, #{wdate}, #{readcount})
    </insert>

    <delete id="delete"
            parameterType="int">
        delete from bbs
        where seq = #{seq}
    </delete>
</mapper>